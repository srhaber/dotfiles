[user]
	name = Shaun Haber
	email = srhaber@gmail.com

[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f

[color]
  ui = true

[alias]
  amend = commit --amend
  br = branch -vv
  ci = commit
  co = checkout
  dc = diff --cached
  di = diff
  pom = push origin master
  st  = status -sb

  # Logging aliases
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all
  lr = !git l -30
  head = !git l -1
  h = !git head
  hp = "!source ~/.githelpers && show_git_head"

[core]
  excludesfile = ~/.gitignore_global
  editor=vim

[push]
  default = simple

[branch]
	autosetuprebase = always
